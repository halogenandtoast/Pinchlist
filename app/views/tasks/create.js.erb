$('#list_<%= @list.id %> ul').append("<%= escape_javascript(render(@task)) %>");
$('#new_task_title_<%= @list.id %>').val("");
setup_single_and_double_click($('#task_<%= @task.id %> span.task_title'), "");
setup_single_and_double_click($('#task_<%= @task.id %> span.date'), "");
