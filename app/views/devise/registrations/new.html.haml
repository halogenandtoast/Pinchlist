#page
  #content.form
    = render "logo"
    %h2 Sign up
    .info
      %p Listwerk is free for up to 3 lists. Unlimited lists costs $5 per year, and you may upgrade at any time.
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      = f.hidden_field :timezone
      %label.input{:for => "email"}
        %span Email Address
        = f.text_field :email
      %label.input{:for => "password"} 
        %span Password
        = f.password_field :password
      %label.input{:for => "password_confirmation"} 
        %span Password confirmation
        = f.password_field :password_confirmation
      = f.submit "Sign up"
= render :partial => "devise/shared/links"
- content_for :javascripts do
  :javascript
    $(function() {
      var timezone = jstz.determine_timezone();
      $("#user_timezone").val(timezone.name());
    });
